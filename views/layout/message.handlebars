<a href="/articles">
    <i class="material-icons medium black-text">arrow_back</i>
</a>
<div class="container">
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <ul class="collection">
                {{#each message}}
                <li class="collection-item avatar">
                    <i class="material-icons circle cyan">comment</i>
                    <span class="title">{{author}}</span>
                    <p>
                        {{content}}
                    </p>
                    <a href="/delete/comment/{{_id}}" class="secondary-content">
                        <i class="material-icons cyan-text">delete</i>
                    </a>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>